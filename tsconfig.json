{
    "compilerOptions": {
        "target": "ES5",
        "module": "commonjs",
        "lib": [
            "es2015",
            "es2016",
            "es2017",
            "es2018",
            "es2019",
            "es2020",
            "esnext",
            "dom"
        ],
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "dist",
        "experimentalDecorators": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ],
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Recommended"
}